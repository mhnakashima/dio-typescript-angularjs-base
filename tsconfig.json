{
    "compilerOptions": {
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "types": [
            "node"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5"
    },
    "include": [
        "src/**/*.ts"
    ],
    "globals": {
        "require": true
    },
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}